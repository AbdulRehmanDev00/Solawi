<%- include('partials/header') %>

<body class="bg-cover bg-fixed bg-center" style="background-image: url('/img/katarifarm-banner-small.png');">
    <main class="mt-5 pt-5 container">
        <section class="custom-container p-5 rounded-lg shadow mb-5 text-center">
            <h2 class="font-bowlby text-custom-header mb-4">Login</h2>
            <form id="loginForm" action="/login" method="POST">
                <div class="form-group">
                    <label for="login-email">Email</label>
                    <input type="email" class="form-control" id="login-email" name="email" required>
                </div>
                <div class="form-group">
                    <label for="login-password">Password</label>
                    <input type="password" class="form-control" id="login-password" name="password" required>
                </div>
                <button type="submit" class="btn btn-custom">Login</button>
            </form>
        </section>
    </main>

<%- include('partials/footer') %>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const tooltips = document.querySelectorAll('.image-container');

        tooltips.forEach(function(tooltip) {
            tooltip.addEventListener('mouseover', function() {
                const tooltipBox = this.querySelector('.tooltip');
                if (tooltipBox) {
                    tooltipBox.classList.add('tooltip-visible'); // Add class to show tooltip
                }
            });

            tooltip.addEventListener('mouseout', function() {
                const tooltipBox = this.querySelector('.tooltip');
                if (tooltipBox) {
                    tooltipBox.classList.remove('tooltip-visible'); // Remove class to hide tooltip
                }
            });
        });
    });
</script>


